<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonu.learning">

    <permission android:name="com.sonu.learning.CUSTOM_PERMISSION" />

<!--    required by sender app for sending broadcast-->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Learning">
        <activity android:name=".BroadcastExamples">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThreadingExamples">

        </activity>
        <activity android:name=".LoaderExample" />
        <activity android:name=".MainActivity" />

        <receiver
            android:name=".br.MyBroadcastReceiver2"
            android:permission="android.permission.INTERNET">
            <intent-filter android:priority="1">
                <action android:name="com.sonu.learning" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".br.MyBroadcastReceiver3"
            android:permission="com.sonu.learning.CUSTOM_PERMISSION">
            <intent-filter android:priority="3">
                <action android:name="com.sonu.learning" />
            </intent-filter>
        </receiver>

    </application>

</manifest>